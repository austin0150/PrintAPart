    <main>
        <div class = "container" >
                <form style="justify-content: center;">
                    <div class="form-group" style="width: 50%;margin-top: 5em;">
                      <label for="userEmail">Email address</label>
                      <input type="email" class="form-control" id="userEmail" aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="btn btn-primary" onclick="sendResetEmail()">Submit</div>
                    <div class="btn btn-primary" onclick="returnToLogin()">Return to login</div>
                </form>
            
        </div>
    </main>

